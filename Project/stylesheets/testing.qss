
/* Title & Labels*/
QLabel {
    color : white;
}

QLabel#hidden {
    font-size : 18px;
}

QLabel#image {
    border-radius : 12px;
    background-color : green;
}

QLabel#result {
    border-radius : 6px;
    border : 3px solid black;
    background-color : white;
    color : black;
}

/* Buttons */
QPushButton#select {
    background-color: white;
    border-style: solid;
    border-width:3px;
    border-color : black;
    border-radius:50px;
    max-width:100px;
    max-height:100px;
    min-width:100px;
    min-height:100px;
}

QPushButton#hbutton {
    background-color: white;
    border-style: solid;
    border-width:1px;
    border-color : black;
    border-radius: 20px;
    max-width:40px;
    max-height:40px;
    min-width:40px;
    min-height:40px;
}

QPushButton#hbutton:hover {
    background-color : #d6d6d6;
}

QPushButton#hbutton:pressed {
    background-color : #666666;
    border-width : 2px;
}

QPushButton#select:hover {
    background-color : #d6d6d6;
}

QPushButton#select:pressed {
    background-color : #666666;
    border-width : 2px;
}

/* Return Button */
QPushButton#retour {
    color : white;
    border : 0px;
    font : bold;
    font-size : 26px;
}

QPushButton#retour:hover {
    color : #d6d6d6;
    font-size : 30px;
}

/* Message Box */
QMessageBox QLabel {
    color : black;
}
